<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>Dashboard Admin | Hair Appointment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
</head>
<body class="admin-page">

    <%- include('partials/header-admin') %>

    <main class="container-fluid px-4">
        
        <div class="row admin-toolbar align-items-center mt-4">
            <div class="col-md-4">
                <label for="salon-select" class="h5 fw-bold">Vue du Salon :</label>
                <select id="salon-select" class="form-select bg-dark text-white border-secondary">
                    <% if (typeof salons !== 'undefined' && salons.length > 0) { %>
                        <% salons.forEach(function(salon) { %>
                            <option value="<%= salon.id_business %>">
                                <%= salon.nom %> - <%= salon.ville %>
                            </option>
                        <% }); %>
                    <% } else { %>
                        <option value="" disabled selected>Aucun salon trouvé</option>
                    <% } %>
                </select>
            </div>
            <div class="col-md-8 text-end">
                <span class="text-white me-3">Bienvenue sur votre espace de pilotage</span>
                <button class="btn btn-primary rounded-pill">+ Ajouter RDV</button>
            </div>
        </div>

        <div class="card shadow-lg bg-dark text-white border-secondary mb-5">
            <div class="card-body p-0 cardcal">
                <div id='calendar'></div>
            </div>
        </div>

    </main>

    <%- include('partials/footer2') %>

    <div class="modal fade" id="eventDetailsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark text-white border-secondary">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="modalTitle">Détails du Rendez-vous</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <strong class="text-secondary">Client :</strong>
                        <span id="modalClientName" class="d-block fs-5 fw-bold"></span>
                        <small id="modalClientPhone" class="text-info"></small>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong class="text-secondary">Coiffeur :</strong>
                            <div id="modalEmployee"></div>
                        </div>
                        <div class="col-6">
                            <strong class="text-secondary">Prix :</strong>
                            <div id="modalPrice" class="fw-bold text-success"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong class="text-secondary">Horaire :</strong>
                        <div id="modalTime"></div>
                    </div>

                    <div class="mb-3">
                        <strong class="text-secondary">Statut :</strong>
                        <span id="modalStatus" class="badge"></span>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn btn-sm" style ="background-color: #4ecdc4;">Modifier</button>
                    <button type="button" class="btn btn-danger btn-sm">Annuler RDV</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const calendarEl = document.getElementById('calendar');
            const salonSelect = document.getElementById('salon-select');
            
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                locale: 'fr',
                height: 'auto',
                buttonText: {
                    today: "Auj.",
                    month: "Mois",
                    week: "Sem.",
                    day: "Jour",
                    list: "Liste"
                },
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                slotMinTime: '08:00:00',
                slotMaxTime: '21:00:00',
                allDaySlot: false,
                nowIndicator: true,
                events: function(info, successCallback, failureCallback) {
                    const businessId = salonSelect.value;
                    const url = `/api/admin/events?businessId=${businessId}&start=${info.startStr}&end=${info.endStr}`;
                    
                    fetch(url)
                        .then(r => {
                            if (!r.ok) throw new Error("Erreur réseau");
                            return r.json();
                        })
                        .then(d => successCallback(d))
                        .catch(e => {
                            console.error("Erreur chargement events:", e);
                            failureCallback(e);
                        });
                },
                eventClick: function(info) {
                    // Récupération des données étendues envoyées par le contrôleur
                    const props = info.event.extendedProps;
                    
                    // 1. Remplissage des textes de la modale
                    document.getElementById('modalTitle').textContent = info.event.title;
                    
                    // Découpage intelligent du titre "Prénom Nom - Prestation" pour isoler le nom
                    const titleParts = info.event.title.split(' - ');
                    document.getElementById('modalClientName').textContent = titleParts[0] || info.event.title;
                    document.getElementById('modalClientPhone').textContent = props.clientPhone || 'Numéro non renseigné';
                    
                    document.getElementById('modalEmployee').textContent = props.employee || 'Non assigné';
                    document.getElementById('modalPrice').textContent = (props.price || 0) + ' €';
                    
                    // Formatage propre des heures (ex: 14:00 - 15:00)
                    const options = { hour: '2-digit', minute: '2-digit' };
                    const timeString = info.event.start.toLocaleTimeString('fr-FR', options) + 
                                    ' - ' + 
                                    (info.event.end ? info.event.end.toLocaleTimeString('fr-FR', options) : '?');
                    document.getElementById('modalTime').textContent = timeString;

                    // 2. Gestion du Badge de Statut (Couleur et Texte)
                    const statusEl = document.getElementById('modalStatus');
                    // On récupère le statut brut (ex: 'pending')
                    const statusRaw = props.status ? props.status.toLowerCase() : 'inconnu';
                    
                    // --- ÉTAPE DE TRADUCTION ---
                    let statusText = 'INCONNU';
                    let badgeClass = 'bg-secondary'; // Couleur par défaut

                    if(statusRaw === 'confirmed' || statusRaw === 'validé') {
                        statusText = 'VALIDÉ';
                        badgeClass = 'bg-success';
                    } 
                    else if(statusRaw === 'pending' || statusRaw === 'en attente') {
                        statusText = 'À CONFIRMER'; // Tu peux mettre "EN ATTENTE" si tu préfères
                        badgeClass = 'bg-warning text-dark';
                    } 
                    else if(statusRaw === 'cancelled' || statusRaw === 'annulé') {
                        statusText = 'ANNULÉ';
                        badgeClass = 'bg-danger';
                    }

                    // Mise à jour du texte et des classes
                    statusEl.textContent = statusText;
                    statusEl.className = 'badge ' + badgeClass; // On écrase les anciennes classes proprement

                    // 3. Affichage de la modale Bootstrap
                    const myModal = new bootstrap.Modal(document.getElementById('eventDetailsModal'));
                    myModal.show();
                }
            });
            calendar.render();
            
            // Rafraîchir le calendrier quand on change de salon
            salonSelect.addEventListener('change', () => calendar.refetchEvents());
        });
    </script>
</body>
</html>