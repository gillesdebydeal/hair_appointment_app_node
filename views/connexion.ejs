<!--header EJS-->
<%- include('partials/header2') %>



<main class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="auth-card p-4 p-md-5 shadow-lg rounded-4 text-center">
        
        <h1 class="h3 fw-bold mb-4 text-white">Connexion à votre Espace</h1>
        <p class="text-muted textmutedconnexion">Accédez à vos réservations et à votre historique.</p>

        <form id="login-form">
            
            <div class="mb-3 text-start">
                <label for="loginEmail" class="form-label">Adresse e-mail</label>
                <input type="email" class="form-control form-control-lg" id="loginEmail" name="email" required>
                <div class="invalid-feedback">Veuillez entrer une adresse e-mail valide.</div>
            </div>

            <div class="mb-4 text-start">
                <label for="loginPassword" class="form-label">Mot de passe</label>
                <input type="password" class="form-control form-control-lg" id="loginPassword" name="password" required>
                <a href="/recuperation-mot-de-passe" class="d-block mt-2 small text-muted text-end textmutedconnexion">Mot de passe oublié ?</a>
            </div>

            <button type="submit" class="btn btn-primary btn-lg rounded-pill w-100 mb-3">Se connecter</button>
        </form>

        <div class="mt-4 pt-3 border-top border-secondary">
            <p class="mb-0 small text-muted textmutedconnexion textmutedconnexion">Pas encore inscrit ? 
                <a href="/pages/inscription.html" class="footer-link textmutedconnexion" style="text-decoration:underline;">Créer un compte</a>
            </p>
        </div>
    </div>
</main>

